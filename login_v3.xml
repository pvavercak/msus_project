		<event type="finish">
			<id>2_finish</id>
			<actions phase="pre">
				<action trigger="set">
					success : f.4000,
					fail : f.4001,
					email : f.email_field,
					passwd : f.passwd_field;

					def groupId = findCase{it.processIdentifier.eq("org_group").and(it.author.id.eq(loggedUser().id))}?.stringId;
					def dbcase = findCase{it.processIdentifier.eq("${groupId}_db_v10" as String)};
					def task = findTask{it.caseId.eq(dbcase.stringId) &amp; it.transitionId.eq("1")};

					def data = getData(task);
					def database = data["enumeration_0"].options;

					change success value {
						return 1;
					};
					change fail value {
						return 0;
					};
					
					if (!database.containsKey(email.value)) {
						change fail value {
							return 1;
						};
						change success value {
							return 0;
						};
						<!-- change email value {
							return "Incorrect email!";
						}
						change passwd value {
							return "";
						} -->
					} else if (!database.get(email.value).equals(passwd.value)) {
						change fail value {
							return 1;
						};
						change success value {
							return 0;
						};
					}

<!-- 
					def pom = database.get(email.value) as String;
					if (passwd.value != pom) {
						change fail value {
							return 1;
						};
						change success value {
							return 0;
						};
						change passwd value {
							return "Incorrect password!";
						}
					} -->
                </action>
			</actions>
		</event>
