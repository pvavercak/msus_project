		<event type="assign">
			<id>1_assign</id>
			<actions phase="pre">
				<action>
					dateField: f.date_1,
					outputis: f.text_2,
					chs: f.enumeration_0,
					newMenu: f.enumeration_1;
					
					def dowArray = [
						"Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"
					]
					
					def today = new Date();
					def indexSelected = dowArray.findIndexOf{ it == (chs.value as String) };
					def indexToday = today.getDay();
					change dateField value {
						if (0 > (indexSelected - indexToday)) {
							return today.plus(7 - Math.abs(indexSelected - indexToday));
						}
						return today.plus(Math.abs(indexSelected - indexToday));
					}
					change outputis value {
						return indexSelected + " - " + indexToday;
					}
				</action>
			</actions>
		</event>
