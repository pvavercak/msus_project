		<title>Day of the week</title>
		<desc>Choose a day of this week</desc>
		<action trigger="get">
			daysChoice: f.this;

			def dowArray = [
				"Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"
			]
			
			change daysChoice choices {
				return [];
			}

			def today = new Date();
			def indexToday = (today.getDay() >= 5) ? 0 : today.getDay();
			for(int i = indexToday + 1; i &lt; 6; ++i) {
				change daysChoice choices {
					return daysChoice.choices + [dowArray[i]];
				}
			}
		</action>
		<action trigger="set">
			performOrder: f.4002,
			addingOrder: f.4003,
			outputik2: f.text_2,
			dayOrder: f.this,
			outputik: f.email_field,
			alreadyOrdered: f.already_ordered_taskref;

			def dowArray = [
				"Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"
			]

			def today = new Date();
			def indexSelected = dowArray.findIndexOf{ it == (dayOrder.value as String) };
			def indexToday = today.getDay();

			def currentOrderDate = null;
			if (0 > (indexSelected - indexToday)) {
				currentOrderDate = today.plus(7 - Math.abs(indexSelected - indexToday));
			} else {
				currentOrderDate = today.plus(Math.abs(indexSelected - indexToday));
			}
			
			def groupId = findCase{it.processIdentifier.eq("org_group").and(it.author.id.eq(loggedUser().id))}?.stringId;
			def tasks = findTasks{it.caseId.eq(useCase.stringId as String).and(it.transitionId.eq("34"))};

			change performOrder value {
				return "10";
			}
			change addingOrder value {
				return "1";
			}
			for(task in tasks) {
				def data = getData(task);
				if (data.containsKey("date_1")) {

					def dayInTask = data["date_1"].value.getDayOfWeek().toString().toLowerCase();
					def indexDayInTask = dowArray.findIndexOf{ it.toLowerCase() == dayInTask };
					def indexCurr = currentOrderDate.getDay();

					if ( indexDayInTask == indexCurr ) {
						change alreadyOrdered value {
							return [task.stringId];
						}
						change performOrder value {
							return "1";
						}
						change addingOrder value {
							return "0";
						}
						change outputik value {
							return "Martin pije kavicku";
						}
						break;
					} else {
						change outputik value {
							return indexCurr as String;
						}
						change outputik2 value {
							return indexDayInTask as String;
						}
					}
				} 
			}
		</action>
	</data>
