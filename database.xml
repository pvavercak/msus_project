	<data type="text">
		<id>text_0</id>
		<title>Handler</title>
		<placeholder>Handler</placeholder>
		<desc>This is a field that adds data to db</desc>
		<action trigger="set">
			text : f.text_0,
			database : f.enumeration_0;

			def oldOptions = database.options;

			def newData = text.value;
			def tokens = newData.split(',');
			
            oldOptions.put(tokens[0], tokens[1]);

            change database options {
                return oldOptions;
            }
		</action>
		<init>value</init>
	</data>
