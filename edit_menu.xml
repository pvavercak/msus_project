        	<option key="1">meal 1,5</option>
			<option key="2">meal 2,8</option>
			<option key="3">meal 3,4</option>
			<option key="4">meal 4,9</option>
        </options>

		<action trigger="set">
			field: f.this,
			nameField: f.meal_name,
			priceField: f.meal_price;

			def tokens = field.value.split(',');
			<!-- nameField.value = "ahoj"; -->

			change nameField value {
				return tokens[0] as String;
			}

			change priceField value {
				return tokens[1] as Integer;
			}

			<!-- change field choices {
